<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-category-and-item-tables" author="habib">

        <createSequence sequenceName="category_sequence"
                        startValue="1"
                        incrementBy="1" />
        <!-- Category table -->
        <createTable tableName="category">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="category_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
            <column name="file_path" type="VARCHAR(500)"/>
            <column name="created_at" type="TIMESTAMP"/>
        </createTable>

        <createSequence sequenceName="item_sequence"
                        startValue="1"
                        incrementBy="1" />
        <!-- Item table -->
        <createTable tableName="item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
            <column name="item_price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="file_path" type="VARCHAR(500)"/>
            <column name="full_path" type="VARCHAR(1000)"/>
            <column name="item_rating" type="DECIMAL(3,2)"/>
        </createTable>

        <!-- Many-to-many join table -->
        <createTable tableName="item_category">
            <column name="item_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="item_category" columnNames="item_id, category_id" constraintName="pk_item_category"/>
        <addForeignKeyConstraint baseTableName="item_category"
                                 baseColumnNames="item_id"
                                 referencedTableName="item"
                                 referencedColumnNames="id"
                                 constraintName="fk_item_category_item"/>
        <addForeignKeyConstraint baseTableName="item_category"
                                 baseColumnNames="category_id"
                                 referencedTableName="category"
                                 referencedColumnNames="id"
                                 constraintName="fk_item_category_category"/>

    </changeSet>
</databaseChangeLog>
