<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

   <changeSet id="add-total-price-columns" author="habib-wahid">
       <addColumn tableName="customer_order">
           <column name="total_item_price" type="DOUBLE PRECISION" defaultValueNumeric="0.0">
               <constraints nullable="false" />
           </column>
           <column name="total_addon_price" type="DOUBLE PRECISION" defaultValueNumeric="0.0"/>
       </addColumn>
   </changeSet>

    <changeSet id="add-total-price-columns-in-order-item" author="habib-wahid">
        <addColumn tableName="order_item">
            <column name="total_addon_price" type="DOUBLE PRECISION" defaultValueNumeric="0.0" />
        </addColumn>
    </changeSet>

    <changeSet id="rename-price-column-in-order-item" author="habib-wahid">
        <renameColumn tableName="order_item"
                      oldColumnName="price"
                      newColumnName="total_price" />
    </changeSet>
</databaseChangeLog>
