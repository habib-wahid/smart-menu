<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1-create-addon-sequence" author="habib">
        <createSequence sequenceName="addon_sequence" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="2-create-addon-table" author="habib">
        <createTable tableName="addon">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="filePath" type="VARCHAR(255)"/>
            <column name="full_path" type="VARCHAR(255)"/>
            <column name="rating" type="DECIMAL(3,2)"/>
        </createTable>
    </changeSet>

    <changeSet id="3-create-addon-item-table" author="habib">
        <createTable tableName="addon_item">
            <column name="addon_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="item_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                constraintName="fk_addon_item_addon"
                baseTableName="addon_item"
                baseColumnNames="addon_id"
                referencedTableName="addon"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                constraintName="fk_addon_item_item"
                baseTableName="addon_item"
                baseColumnNames="item_id"
                referencedTableName="item"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
